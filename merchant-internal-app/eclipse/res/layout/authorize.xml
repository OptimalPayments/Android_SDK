<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="110dp"
                android:layout_height="30dip"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:text="@string/back"
                android:textColor="@color/button_blue_bgcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_TitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/shoe"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_Shoe"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@android:color/transparent"
            android:src="@drawable/shoe" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:lines="1"
                android:text="@string/merchant_ref"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_merchantref"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/configure_edittext_selector"
                android:gravity="center"
                android:editable="false"
                android:longClickable="false"
                android:maxLength="255"
                android:text="test_2015_323_sdfa"
                android:textColor="@android:color/black" />

            <requestFocus />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settlewithauth"
                android:textColor="@android:color/black" />

            <Switch
                android:id="@+id/switch_settle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:lines="1"
                android:text="@string/amount"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/configure_edittext_selector"
                android:gravity="center"
                android:inputType="numberSigned"
                android:longClickable="false"
                android:text="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dip" >

            <Button
                android:id="@+id/btn_authorize"
                style="@style/BlueButton"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/authorize"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>